{
    "compilerOptions": {
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist/js",
      "jsx": "react",
      "lib": [
        "es2017",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true,
      "strictNullChecks": false,
      "target": "es5"
    },
    "include": [
      "./src/*",
      "./src/**/*",
      "main.d.ts" // include "types": https://stackoverflow.com/a/54417184
    ],
    "exclude": [
      "./src/**/**.test.tsx",
      "./src/**/**.test.ts",
      "./src/**/**.stories.ts",
      "./src/**/**.stories.tsx",
      "./src/**/examples/**"
    ]
}
